@{
    ViewData["Title"] = "View Quadrant";
}
<!--// Author: Ryan Pinkney, Jacob Poor, Tanner Davis, Kevin Gutierrez
// This is to view the stuff.-->


<!--Bring in the bag of tasks-->
@model List<Tasks>

<!--Set up the grid-->
<div class="container border">
    <div class="row border">
        <div class="col border">
            <h3>Quadrant 1:</h3>
        </div>
        <div class="col border">
            <h3>Quadrant 2:</h3>
        </div>

    </div>
    <div class="row border">
        <div class="col border">
            <table class="table table-bordered table-striped">

                <thread class="font-weight-bold">

                    <!--Columns-->
                    <tr>
                        <td>Task Name:</td>
                        <td>Due Date:</td>
                        <td>Quadrant:</td>
                        <td>Category:</td>
                        <td>Completed</td>
                    </tr>

                </thread>

                <tbody>

                    <!--Rows-->
                    @foreach (var iCount in Model)
                    {<!-- Model needs to be capitalized-->

                        <tr>
                            <td>@iCount.Task</td>
                            <td>@iCount.Date</td>
                            <td>@iCount.Quadrant</td>
                            <td>@iCount.Category.CategoryName</td>
                            <td>@iCount.Completed</td>

                            <!--Buttons to delete and edit that pass the id as a parameter in the url-->
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@iCount.TaskID">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@iCount.TaskID">Delete</a></td>
                        </tr>

                    }



                </tbody>




            </table>
        </div>
        <div class="col border">

        </div>

    </div>
    <div class="row border">
        <div class="col border">
            <h3>Quadrant 3:</h3>
        </div>
        <div class="col border">
            <h3>Quadrant 4:</h3>
        </div>

    </div>
    <div class="row border">
        <div class="col border">
        </div>
        <div class="col border">

        </div>

    </div>
</div>