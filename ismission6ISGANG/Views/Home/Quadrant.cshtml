                    <!--Columns-->
                    <tr>
                        <td class="col-md-2">Task Name:</td>
                        <td class="col-md-3">Due Date:</td>
                        <td>Quadrant:</td>
                        <td>Category:</td>
                        <td>Completed</td>
                        <td></td>
                        <td></td>
                    </tr>

                </thread>

                <tbody>

                    <!--Rows-->
                    @foreach (var iCount in Model)
                    {<!-- Model needs to be capitalized-->
                        if (@iCount.Quadrant == 1)
                        {
                        <tr>
                            <td>@iCount.Task</td>
                            <td>@iCount.Date</td>
                            <td>@iCount.Quadrant</td>
                            <td>@iCount.Category.CategoryName</td>
                            <td>@iCount.Completed</td>

                            <!--Buttons to delete and edit that pass the id as a parameter in the url-->
                            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@iCount.TaskID">Edit</a></td>
                            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@iCount.TaskID">Delete</a></td>
